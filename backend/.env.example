
# Node Environment
NODE_ENV=development

# Server Configuration
PORT=8000

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/local_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:8000
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
BETTER_AUTH_SECRET=your-32-byte-base64-encoded-secret-here
# Must be 32 bytes encoded as base64
ENCRYPTION_KEY=your-32-byte-base64-encoded-key-here

# Google OAuth Configuration (Optional)
# Get from: https://console.cloud.google.com/apis/credentials
# Leave empty to disable Google OAuth sign-in
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Frontend Configuration
FRONTEND_ORIGIN=http://localhost:3000

# API Keys (Optional)
OPENAI_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=

# Replicate API Configuration (Optional)
# Required for image operations (upscale, remove background)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# FAL AI Configuration (Optional)
# Required for music generation with MiniMax
# Get from: https://fal.ai/dashboard/keys
FAL_KEY=




# Cloudflare R2 Storage Configuration (Optional)
# Required for canvas asset storage
# Get from: https://dash.cloudflare.com/r2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
